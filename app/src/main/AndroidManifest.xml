<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.student.ce_refrigerator">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_refrigerator"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_refrigerator"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Item"
            android:screenOrientation="portrait"/>
        <activity android:name=".Category"
            android:screenOrientation="portrait"/>
        <activity android:name=".SubCategory"
            android:screenOrientation="portrait"/>
        <activity android:name=".Refrigerator"
            android:screenOrientation="portrait"/>
        <activity android:name=".item2"
            android:screenOrientation="portrait"/>
        <activity android:name=".Shopping_cart_list"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>